<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawingControls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/header_bg"
    android:weightSum="6" >

    <ImageButton
        android:id="@+id/imageButtondrawback"
        android:layout_width="20dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:src="@drawable/scrbble_back" />

    <!--<ImageButton
        android:id="@+id/imageButtondrawcolors"
        android:layout_width="40dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:src="@drawable/scrbble_undo" />-->

    <ImageButton
        android:layout_width="40dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/imageButtonbrushdraw"
        android:layout_width="40dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_note_brush" />

    <ImageButton
        android:id="@+id/imageButtonhighlightdraw"
        android:layout_width="40dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_note_highlight" />

    <ImageButton
        android:id="@+id/imageButtondrawerase"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
          android:layout_weight="1"
        android:src="@drawable/scrbble_erase" />

    <ImageButton
        android:id="@+id/imageButtondrawnew"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/scrbble_newdraw" />

    <ImageButton
        android:layout_width="40dp"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:cropToPadding="false"
        android:layout_weight="1"/>

</LinearLayout>